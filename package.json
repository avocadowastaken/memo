{
  "name": "create-memo",
  "version": "0.1.2",
  "description": "Memoization utils for JavaScript",
  "repository": "https://github.com/umidbekk/memo.git",
  "license": "MIT",
  "author": "Umidbek Karimov",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rapidbundle",
    "lint": "prettier . --check",
    "prerelease": "npx tsc && npm run lint && npm run build",
    "release": "np --no-2fa",
    "tdd": "jest --watch",
    "test": "jest --coverage"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__testutils__/"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@types/jest": "27.0.2",
    "jest": "27.3.1",
    "np": "7.6.1",
    "prettier": "2.5.1",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-packagejson": "2.4.13",
    "rapidbundle": "0.12.0",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=7"
  }
}
