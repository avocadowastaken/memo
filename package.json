{
  "name": "create-memo",
  "version": "0.1.2",
  "description": "Memoization utils for JavaScript",
  "repository": "https://github.com/umidbekkarimov/memo.git",
  "license": "MIT",
  "author": "Umidbek Karimov",
  "scripts": {
    "build": "pika build",
    "prebump": "yarn tsc && yarn lint",
    "bump": "pika publish --no-publish",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage",
    "version": "yarn build"
  },
  "devDependencies": {
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-build-types": "^0.9.2",
    "@pika/plugin-build-web": "^0.9.2",
    "@pika/plugin-bundle-types": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@superdispatch/babel-preset": "^0.3.0",
    "@superdispatch/eslint-plugin": "^0.3.0",
    "@superdispatch/js-tools": "^0.3.0",
    "@superdispatch/prettier-config": "^0.3.0",
    "@superdispatch/tsconfig": "^0.3.0",
    "@types/jest": "^26.0.20",
    "codecov": "^3.8.1",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "typescript": "^4.2.2"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-standard-pkg",
        {
          "exclude": [
            "**/__tests__/**/*",
            "**/__testutils__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-build-web"
      ],
      [
        "@pika/plugin-build-types",
        {
          "tsconfig": "./tsconfig.build.json"
        }
      ],
      [
        "@pika/plugin-bundle-types"
      ]
    ]
  }
}
