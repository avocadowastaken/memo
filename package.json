{
  "name": "create-memo",
  "version": "0.1.2",
  "description": "Memoization utils for JavaScript",
  "repository": "https://github.com/umidbekk/memo.git",
  "license": "MIT",
  "author": "Umidbek Karimov",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rapidbundle",
    "prerelease": "yarn --force && yarn tsc && yarn lint",
    "release": "pika publish",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage",
    "version": "yarn build"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": "*.js",
        "extends": "plugin:@superdispatch/node"
      },
      {
        "files": "*.ts",
        "parserOptions": {
          "project": "./tsconfig.json"
        },
        "extends": [
          "plugin:@superdispatch/typescript"
        ]
      },
      {
        "files": "**/__tests__/**/*.ts",
        "extends": "plugin:@superdispatch/ts-jest"
      },
      {
        "files": "**/{__tests__,__testutils__}/**/*.ts",
        "rules": {
          "quotes": "off",
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ],
    "root": true
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__testutils__/"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-typescript": "^7.14.5",
    "@superdispatch/eslint-plugin": "^0.4.1",
    "@superdispatch/js-tools": "^0.4.0",
    "eslint": "^7.31.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.3.3",
    "prettier-plugin-packagejson": "^2.2.11",
    "rapidbundle": "^0.11.1",
    "typescript": "^4.2.2"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
