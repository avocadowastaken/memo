{
  "name": "create-memo",
  "version": "0.1.2",
  "description": "Memoization utils for JavaScript",
  "repository": "https://github.com/umidbekk/memo.git",
  "license": "MIT",
  "author": "Umidbek Karimov",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rapidbundle",
    "lint": "js-tools lint",
    "prerelease": "npm i && npx tsc && npm run lint && npm run build",
    "release": "np --no-2fa",
    "tdd": "jest --watch",
    "test": "jest --coverage"
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": "*.js",
        "extends": "plugin:@superdispatch/node"
      },
      {
        "files": "*.ts",
        "parserOptions": {
          "project": "./tsconfig.json"
        },
        "extends": [
          "plugin:@superdispatch/typescript"
        ]
      },
      {
        "files": "**/__tests__/**/*.ts",
        "extends": "plugin:@superdispatch/ts-jest"
      },
      {
        "files": "**/{__tests__,__testutils__}/**/*.ts",
        "rules": {
          "quotes": "off",
          "@typescript-eslint/no-explicit-any": "off"
        }
      }
    ],
    "root": true
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__testutils__/"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "7.16.0",
    "@babel/preset-typescript": "7.16.0",
    "@superdispatch/eslint-plugin": "0.5.0",
    "@superdispatch/js-tools": "0.5.0",
    "@types/jest": "27.0.2",
    "eslint": "8.2.0",
    "jest": "27.3.1",
    "np": "7.5.0",
    "prettier": "2.4.1",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-packagejson": "2.2.13",
    "rapidbundle": "0.12.0",
    "typescript": "4.4.4"
  },
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=7"
  }
}
