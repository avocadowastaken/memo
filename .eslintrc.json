{
  "root": true,
  "overrides": [
    { "files": "*.js", "extends": "plugin:@superdispatch/node" },
    {
      "files": "*.ts",
      "extends": ["plugin:@superdispatch/typescript"],
      "parserOptions": {
        "project": "./tsconfig.json"
      }
    },
    {
      "files": "**/__tests__/**/*.ts",
      "extends": "plugin:@superdispatch/ts-jest"
    },
    {
      "files": "**/{__tests__,__testutils__}/**/*.ts",
      "rules": {
        "quotes": "off",
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ]
}
